<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= current_user.name %>
    </span>
    <span class="userposts">
      <%= pluralize(current_user.userposts.count, "userpost") %>
    </span>
    <span class="new_userpost">
      <%= link_to "New Post", new_userpost_path(current_user) %>
    </span>
  </a>
</div>