<%= form_for @userpost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit') %>
    <%= button_tag t('.cancel'),:type => 'button',:class => "subBtn",
                  :onclick => "location.href = '#{root_path}'" %>
  </div>
<% end %>